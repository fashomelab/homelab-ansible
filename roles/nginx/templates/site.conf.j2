# This file is managed by Ansible
# Template for {{ item.server_name }}

server { 
    listen 80; 
    server_name {{ item.server_name }}; 
    return 301 https://$host$request_uri; 
}

server { 
    listen 443 ssl; 
    listen [::]:443 ssl; 
    http2 on; 
    server_name {{ item.server_name }};

    # Standard SSL configuration
    include /etc/nginx/conf.d/ssl_params.conf;
    ssl_certificate /etc/letsencrypt/live/{{ cert_primary_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ cert_primary_domain }}/privkey.pem;

    # Logging
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    location / {
        proxy_pass {{ item.proxy_pass_url }};

        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Conditionally add headers for WebSocket support
        {% if item.is_websocket | default(false) %}
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        {% endif %}

        # Conditionally add special settings for Proxmox
        {% if item.is_proxmox | default(false) %}
        proxy_buffering off;
        client_max_body_size 0;
        proxy_connect_timeout 3600s;
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
        send_timeout 3600s;
        {% endif %}
    }
}